<%- include ('partials/navbar.ejs') %>
<%- include ('partials/header.ejs') %>

<div class="texto-total">
    <h1>Produtos</h1>
    <!-- TAGS EJS chamando a variável que veio do index.js -->
    <%= produto %>
    <!-- CONDIÇÃO PARA VERIFICAR SE O PRODUTO NÃO FOI PASSADO -->
     <% if(!produto){ %>
        <p><%= listaProdutos %></p>

     <% } %>
     
     <!-- CONDIÇÃO PARA VERIFICAR SE O PRODUTO NÃO FOI PASSADO com forEach -->
     <% if(!produto){ %>
        <% listaProdutos.forEach((produto) => { %>
            <p><a href="/produtos/<% produto %>"><%= produto %></a></p>
        <% }) %>

     <% } %>
</div>
